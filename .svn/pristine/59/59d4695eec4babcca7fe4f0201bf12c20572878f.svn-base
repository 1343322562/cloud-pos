.goodsCar {
  background-color: #f5f5f5;
  color: #333333;
  font-size: 30px;
  height: 100vh;

}

.car-top-bg {
  background-color: #fecc38;
  background: linear-gradient(to bottom, #ffaf11, #feca0a);
  height: 250px;
  position: absolute;
  width: 100%;
}

.we-bg {
  height: 140px;
}

// 购物车信息卡片
.car-edit-adress-box {
  position: relative;
  width: 94%;
  margin: 0px 3%;

  .car-sign {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .at-list {
    margin-top: 25px;
    padding: 23px 15px;
    border-radius: 16px;



    .at-list__item::after {
      border-width: 0;
    }

    .item-thumb {
      color: #666666;
      height: 42px;
      width: 42px;
    }

    .item-content__info-title {
      font-size: 29px;
      letter-spacing: 1px;
      font-weight: bold;
      text-align: center;
    }

    .at-icon-chevron-right {
      color: #666666;
      font-size: 39px;
    }
  }
}

.goods-car-detail-box {
  border-top: 2PX solid #feb70f;
  margin-top: 35px;
  height: 80vh;
  width: 100%;
  background-color: #fff;
  position: relative;

  // 商品列表
  .good-info-item {
    font-size: 26px;
    width: 100%;
    border-bottom: 1PX solid #eee;
    display: flex;
    align-items: center;

    .checkout-selected {
      padding: 0 12px 0 18px;
    }

    .goods-Img {
      height: 210px;
      width: 210px;
    }

    .goods-props {
      display: flex;
      flex-direction: column;
      height: 225px;
      width: 400px;
      padding-left: 18px;
      justify-content: space-around;


      .props {
        display: flex;
        justify-content: space-between;

        .price {
          color: #fe680a;
          font-size: 29px;
          font-weight: bold;
        }

        .swicth {
          .goodsCarNum {
            display: inline-block;
            width: 44px;
            vertical-align: top;
            font-size: 26px;
            margin: 0 5px;
            text-align: center;
          }

          .addIcon {
            font-size: 6px !important;
            color: rgb(51, 51, 51);
            transform: rotateZ(45deg);
            background: #feb40f;
            border-radius: 50%;
            font-weight: bold;
          }

          .subIcon,
          .addIcon {
            padding: 9px;
          }
        }
      }
    }
  }

  .res-info-box{
    display: flex;
    justify-content: space-between;
    padding: 12px 18px ;
    color: #333333;
    align-items: center;

    .res-info{
      display: flex;
      justify-content: center;
      align-items: center;
      .selected-all {
        font-size: 28px;
        display: flex;
        width: 120px;
        justify-content: space-between;
        align-items: center;
      }
    }

    .price-info{
      display: flex;
      flex-direction: column;
      margin-left: 30px;
      letter-spacing: 3px;
      justify-content: space-between;
      align-content: space-between;
      height: 96px;

      .after {
        font-size: 32px;
        .span {
          color: #fe680a;
          font-weight: bold;
          letter-spacing: 0px;
        }
      }
      .before {
        font-size: 24px;
        .span {
          letter-spacing: 0px;
        }
      }
    }

    .res-btn {
      margin: 0;
      border-radius: 60px;
      font-size: 33px;
      padding: 0 35px;
      height: 80px;
      line-height: 77px;
    }
  }
}