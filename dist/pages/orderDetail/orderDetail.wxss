.v-navbar-bg {
  background: linear-gradient(to bottom, #ffaf0e, #ffcb0b);
}
.at-nav-bar {
  align-items: flex-end;
}
.at-nav-bar__title {
  padding: 12rpx;
}
.switch-center {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 270rpx;
  line-height: 54rpx;
  height: 52rpx;
  font-size: 27rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: 2rpx solid #333333;
  margin: 0 auto;
}
.switch-center .title {
  flex: 1;
}
.switch-center .left {
  border-radius: 28rpx 0 0 28rpx;
}
.switch-center .right {
  border-radius: 0 28rpx 28rpx 0;
}
.switch-center .act-title {
  background-color: #333333;
  color: #fec40c;
}
.orderListCard {
  background-color: #fff;
  font-size: 28rpx;
  border-top: 7rpx solid #f5f5f5;
  padding-top: 10rpx;
}
.orderListCard .order-top {
  width: 96%;
}
.orderListCard .order-bottom {
  margin-top: 5rpx;
  margin-left: 30rpx;
  padding: 3rpx 0;
  width: 91%;
}
.orderListCard .order-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 75rpx;
}
.orderListCard .order-line .orderNo {
  display: inline-block;
  height: 100%;
}
.orderListCard .order-line .orderNo .sign {
  display: inline-block;
  height: 100%;
  width: 10rpx;
  background-color: #ffb910;
  float: left;
  border-radius: 75rpx;
  margin-right: 15rpx;
}
.orderListCard .order-line .orderNo .text {
  display: inline-block;
  line-height: 75rpx;
}
.orderListCard .order-line .orderDate {
  font-size: 24rpx;
  border-left: 1PX solid #ddd;
  padding-left: 30rpx;
  line-height: normal;
  display: inline-block;
}
.orderListCard .order-line .orderDate .dateInfo {
  text-align: center;
}
.orderListCard .order-line .orderPayInfo {
  color: #ff0800;
}
.order-info-list .at-list__item, .order-info-list .item-extra__info {
  font-size: 28rpx;
}
.order-info-list .at-list__item::after {
  border-width: 0;
}
.amt .item-extra__info {
  color: #ff0800 !important;
}
.info-box {
  font-size: 32rpx;
  width: 94%;
  padding: 20rpx 3%;
  border-top: 7rpx solid #f5f5f5;
}
.info-box .title {
  padding: 5rpx 0 10rpx;
}
.info-box .payment {
  padding-top: 15rpx;
}
.info-box .payment .at-list__item {
  padding-top: 0;
  padding-bottom: 0;
}
.info-box .at-list::after {
  border-width: 0em;
}
.item-extra__info {
  padding: 0;
}
.goods-box {
  display: flex;
  flex: 1;
  justify-content: space-between;
  padding: 15rpx 0;
  border-top: 3rpx solid #f4f4f4;
}
.goods-box .goods-img {
  width: 130rpx;
  height: 140rpx;
  background: #999999;
}
.goods-box .payment {
  padding-top: 0;
}
.goods-box .good {
  flex: 1;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-box .good .item-extra__info {
  overflow: inherit;
  color: #666666;
}
.goods-box .good .item-content__info-title {
  color: #666666;
}