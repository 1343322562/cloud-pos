.shopDetail {
  font-size: 28rpx;
}
.topBar .sd-seach-container {
  padding: 46rpx 0 0 20rpx;
}
.sd-seach-container {
  position: relative;
  z-index: 10;
  padding: 24rpx 0 0 18rpx;
}
.sd-seach-container .sd-seach {
  width: 66%;
  border-radius: 30rpx;
  height: 60rpx;
}
.sd-seach-container .sd-seach .at-search-bar__action {
  height: 22PX;
  line-height: 22PX;
}
.none-default {
  white-space: nowrap;
  color: #444444;
}
.sd-shopCard-container {
  width: 100%;
  margin-top: 30rpx;
  height: 260rpx;
}
.sd-shopCard-container .cardView {
  box-shadow: 5rpx 9rpx 17rpx #ddd;
}
.sd-shopCard-container .cardView .at-avatar--large {
  width: 125rpx;
  height: 125rpx;
}
.sd-shop-detail-container {
  height: 100%;
  margin: 0;
  overflow-y: hidden;
}
.sd-shop-detail-container .sd-good-menu-box {
  position: absolute;
  left: 0;
  right: 0;
  width: 185rpx;
  height: 72vh;
  min-height: 68vh;
  background: #ffffff;
  padding-top: 15rpx;
  overflow-y: scroll;
  padding-right: 15rpx;
  overflow-x: hidden;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item1 {
  display: flex;
  height: 95rpx;
  justify-content: center;
  align-items: center;
  position: relative;
  background-color: #fff;
  width: 200rpx;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item1 .item-text {
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  text-align: center;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item2:last-child .item-text {
  border-bottom: 0;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item2 {
  height: 0;
  transition: all .4s;
  background-color: #f5f5f5;
  width: 200rpx;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item2 .act {
  color: #fe680a;
  position: relative;
  font-weight: bold;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item2 .act::after {
  width: 0;
  height: 0;
  content: "";
  border: 11rpx solid transparent;
  border-left-color: #ff6200;
  position: absolute;
  right: -4rpx;
  top: 29rpx;
}
.sd-shop-detail-container .sd-good-menu-box .menu-item2 .item-text {
  font-size: 25rpx;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #cccc;
}
.sd-shop-detail-container .sd-good-menu-box .item-selected {
  border-left: 7rpx solid #fff;
  background-color: #fff;
  width: 100%;
  font-weight: bold;
  border-radius: 0 9rpx 9rpx 0;
  z-index: 10;
}
.sd-shop-detail-container .sd-good-detail-box {
  height: 100%;
  margin-left: 200rpx;
  background-color: #fff;
  border-left: 0.5rpx solid #eee;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-type-box {
  display: block;
  margin-top: 5rpx;
  overflow-x: scroll;
  white-space: nowrap;
  background-color: transparent;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-type-box .at-tag--normal {
  font-weight: bold;
  letter-spacing: 1PX;
  padding: 0 15rpx;
  height: 54rpx;
  line-height: 50rpx;
  white-space: normal;
  font-size: 27rpx;
  margin-right: 15rpx;
  font-weight: bold;
  display: inline-block;
  background-color: #f5f5f5;
  border: 1PX solid #cdcdcd;
  color: #222222;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-type-box .at-tag--active {
  color: #fe680a;
  background-color: #ffeadd;
  border: 1PX solid #ff6709;
  margin-bottom: 0;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box {
  overflow-y: scroll;
  height: 72vh;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item:last-child {
  padding-bottom: 150rpx;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item {
  display: flex;
  align-items: center;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo {
  line-height: 46rpx;
  padding: 20rpx 22rpx 20rpx 0;
  border-bottom: 1PX solid #eee;
  flex: 1;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .title {
  letter-spacing: 1rpx;
  width: 100%;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .tags {
  line-height: 20rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .tags .PromoionTag {
  background-color: #fe4543;
  color: #ffffff;
  font-size: 25rpx;
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
  vertical-align: super;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .price .new {
  color: #fe680a;
  font-size: 33rpx;
  font-weight: bold;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .price .old {
  color: #afafaf;
  text-decoration: line-through;
  font-size: 26rpx;
  margin-left: 16rpx;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom .salesNum {
  color: #8a8a8a;
  font-size: 23rpx;
  padding-top: 5rpx;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom .changeGoodsCar {
  display: flex;
  align-items: center;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom .changeGoodsCar .goodsCarNum {
  display: inline-block;
  width: 52rpx;
  vertical-align: middle;
  font-size: 28rpx;
  margin: 0 5rpx;
  text-align: center;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom .changeGoodsCar .addIcon {
  font-size: 6rpx !important;
  color: #333333;
  -webkit-transform: rotateZ(45deg);
          transform: rotateZ(45deg);
  background: #feb40f;
  border-radius: 50%;
  font-weight: bold;
}
.sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom .changeGoodsCar .subIcon, .sd-shop-detail-container .sd-good-detail-box .sd-good-cards-box .sd-good-cards-item .goodInfo .goodBottom .changeGoodsCar .addIcon {
  padding: 9rpx;
}